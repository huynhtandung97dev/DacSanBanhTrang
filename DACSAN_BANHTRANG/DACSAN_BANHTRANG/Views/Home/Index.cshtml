@{
	var data = ViewBag.Data as List<Product>;
	var slider = ViewBag.Slider as List<Product>;
}

<div class="container">
	<div class="container page-builder-ltr">
		<div class="row row-style row_a2">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col_1bi4  col-style block block_5 title_neo2">
				<div class="module so-listing-tabs-ltr default-nav clearfix img-float label-1 home-lt1">
					<div class="head-title font-ct" style="border-color:#ff5e00;">
						<h2 class="modtitle" style="background: #ff5e00">
							<span style="margin-left: -30px;">
								Bán chạy nhất
							</span>
						</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row js-slick">
			@foreach (var item in slider)
			{
				<div class="product-layout col-lg-3 col-md-3 col-sm-6 col-xs-6">
					<div class="product-item-container">
						<div class="left-block">
							<div class="product-image-container img-wrapper">
								<a class="example-image-link"
								   href="@item.ImageUrl"
								   data-lightbox="example-set">
									<img class="example-image"
										 src="@item.ImageUrl"
										 alt="">
								</a>
							</div>
						</div>
						<div class="right-block">
							<div class="caption">
								<h4>@item.ProcductName</h4>
								<div class="total-price clearfix">
									<div class="price price-left"><span>@item.Price?.ToString("#,#")đ</span></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
	</div>
</div>

